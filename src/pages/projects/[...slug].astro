---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import GutterColumn from '../../components/ui/GutterColumn.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={`${project.data.name} â€” utpal.dev`} description={project.data.description}>
  <GutterColumn />
  <main class="max-w-4xl mx-auto px-6 md:px-0 md:pl-16 pt-16 md:pt-24 space-y-20">

    <!-- Breadcrumb -->
    <nav class="breadcrumb fade-in">
      <a href="/projects" class="hover:text-accent transition-colors" style="color: var(--text-tertiary);">projects</a>
      <span style="color: var(--text-tertiary);"> / </span>
      <span style="color: var(--text-primary);">{project.data.name}</span>
    </nav>

    <!-- Hero -->
    <section class="fade-in">
      <div class="space-y-6">
        <div>
          <h1 class="text-4xl font-medium tracking-tight lowercase" style="color: var(--text-primary);">
            {project.data.name}
          </h1>
          <div class="mt-4 flex flex-wrap gap-4 font-mono text-xs" style="color: var(--text-tertiary);">
            {project.data.tech.map((t) => (
              <span class="px-2 py-1 rounded" style="background-color: var(--border);">{t}</span>
            ))}
          </div>
        </div>

        {project.data.tagline && (
          <p class="text-lg leading-relaxed font-light max-w-2xl" style="color: var(--text-secondary);">
            {project.data.tagline}
          </p>
        )}

        <div class="flex gap-8 pt-2 font-mono text-sm">
          <a href={project.data.github} class="hover-link">view source (github)</a>
          {project.data.liveDemo && (
            <a href={project.data.liveDemo} class="hover-link">live playground &darr;</a>
          )}
        </div>
      </div>
    </section>

    <!-- Performance Metrics -->
    {project.data.metrics && (
      <section class="fade-in" style="animation-delay: 0.1s;">
        <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-tertiary);">//performance metrics</span>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {project.data.metrics.map((metric) => (
            <div class="metric-card">
              <p class="text-xs font-mono uppercase mb-2" style="color: var(--text-tertiary);">{metric.label}</p>
              <p class="text-3xl font-medium" style="color: var(--text-primary);">{metric.value}</p>
              <p class="text-xs mt-2 font-mono" style="color: var(--text-tertiary);">{metric.detail}</p>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Architecture -->
    {project.data.architecture && (
      <section class="fade-in" style="animation-delay: 0.15s;">
        <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-tertiary);">//architecture</span>
        <div class="border p-8 rounded-sm" style="border-color: var(--border); background-color: var(--surface);">
          <div class="flex flex-col md:flex-row items-center justify-between gap-4 max-w-3xl mx-auto">
            {project.data.architecture.nodes.map((node, i) => (
              <>
                {i === 2 ? (
                  <div class="flex flex-col gap-4">
                    <div class="arch-box border-accent" style="background-color: rgba(79,70,229,0.05);">{node}</div>
                    {project.data.architecture.nodes[i + 1] && (
                      <div class="arch-box">{project.data.architecture.nodes[i + 1]}</div>
                    )}
                  </div>
                ) : i === 3 ? null : (
                  <div class="arch-box">{node}</div>
                )}
                {i < project.data.architecture.nodes.length - 1 && i !== 2 && i !== 3 && (
                  <div class="arch-line hidden md:block"></div>
                )}
                {i === 3 && (
                  <div class="arch-line hidden md:block"></div>
                )}
              </>
            ))}
          </div>
          <div class="mt-12 space-y-4 text-sm font-light" style="color: var(--text-secondary);">
            {project.data.architecture.description.map((desc) => (
              <p>
                <strong class="font-medium" style="color: var(--text-primary);">{desc.label}:</strong> {desc.text}
              </p>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Code Snippet -->
    {project.data.codeSnippet && (
      <section class="fade-in" style="animation-delay: 0.2s;">
        <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-tertiary);">//code snippet</span>
        <div class="space-y-2">
          <p class="text-sm font-mono" style="color: var(--text-tertiary);">{project.data.codeSnippet.filename}</p>
          <div class="code-block">
            <pre><code>{project.data.codeSnippet.code}</code></pre>
          </div>
        </div>
      </section>
    )}

    <!-- Benchmarks -->
    {project.data.benchmarks && (
      <section class="fade-in" style="animation-delay: 0.25s;">
        <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-tertiary);">//benchmarks</span>
        <div class="border p-8 rounded-sm overflow-x-auto" style="background-color: var(--surface); border-color: var(--border);">
          <table class="w-full font-mono text-sm">
            <thead>
              <tr class="border-b" style="border-color: var(--border); color: var(--text-tertiary);">
                <th class="text-left pb-4 font-normal">Dataset</th>
                <th class="text-left pb-4 font-normal">Vectors</th>
                <th class="text-left pb-4 font-normal">Latency (p99)</th>
                <th class="text-left pb-4 font-normal">Recall @ 10</th>
              </tr>
            </thead>
            <tbody style="color: var(--text-primary);">
              {project.data.benchmarks.map((b, i) => (
                <tr class={i < project.data.benchmarks.length - 1 ? 'border-b' : ''} style="border-color: var(--border);">
                  <td class="py-4">{b.dataset}</td>
                  <td class="py-4">{b.vectors}</td>
                  <td class="py-4 text-green-600 dark:text-green-400 font-bold">{b.latency}</td>
                  <td class="py-4">{b.recall}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </section>
    )}

    <!-- Production Readiness / Features -->
    {project.data.features && (
      <section class="fade-in" style="animation-delay: 0.3s;">
        <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-tertiary);">//production-readiness</span>
        <div class="grid md:grid-cols-2 gap-12">
          {project.data.features.map((feature) => (
            <div>
              <h3 class="font-bold mb-4" style="color: var(--text-primary);">{feature.title}</h3>
              <ul class="space-y-3 text-sm" style="color: var(--text-secondary);">
                {feature.items.map((item) => {
                  const [bold, ...rest] = item.split(':');
                  return (
                    <li class="flex items-start gap-3">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 flex-shrink-0" style="color: var(--accent);"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
                      <span>
                        {rest.length > 0 ? (
                          <><strong style="color: var(--text-primary);">{bold}:</strong>{rest.join(':')}</>
                        ) : (
                          item
                        )}
                      </span>
                    </li>
                  );
                })}
              </ul>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- About / Description from markdown body -->
    <section class="fade-in pb-20" style="animation-delay: 0.35s;">
      <span class="font-mono text-[0.85rem] font-medium block mb-6" style="color: var(--text-secondary);">// about</span>
      <div class="prose prose-sm max-w-none" style="color: var(--text-secondary);">
        <Content />
      </div>
      <div class="mt-12">
        <a href="/projects" class="hover-link font-mono text-sm">&larr; back to all projects</a>
      </div>
    </section>

  </main>
</BaseLayout>
