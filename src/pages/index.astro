---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import ContributionHeatmap from '../components/sections/ContributionHeatmap.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import ThoughtsSection from '../components/sections/ThoughtsSection.astro';
import ReadingList from '../components/sections/ReadingList.astro';
import DowntimeSection from '../components/sections/DowntimeSection.astro';
---

<BaseLayout title="utpal.dev">
  <div class="min-h-svh flex flex-col justify-center pb-9">
    <div class="max-w-3xl mx-auto px-6 md:px-0 w-full">
      <HeroSection />
    </div>
  </div>
  <main class="max-w-3xl mx-auto px-6 md:px-0 space-y-24">
    <ContributionHeatmap />
    <AboutSection />
    <ProjectsSection />
    <ThoughtsSection />
    <ReadingList />
    <DowntimeSection />
  </main>
</BaseLayout>
